model Estudiante {
  id                  Int @id @default(autoincrement())
  nombre              String
  apellido            String
  edad                Int
  pais                String
  carrera             String
  es_moroso           Boolean
  deuda_ciclo_actual  Int
  materias            Matricula[]
  facultad            Facultad @relation(fields: [facultad_id], references: [id])
  facultad_id         Int
}

model Materia {
  id                  Int @id @default(autoincrement())
  nombre              String
  codigo              Int
  creditos            Int
  carrera             String
  estudiantes         Matricula[]
  profesor            Profesor @relation(fields: [profesor_id], references: [id])
  profesor_id         Int
  facultad            Facultad @relation(fields: [facultad_id], references: [id])
  facultad_id         Int
}

model Matricula {
  id                  Int @id @default(autoincrement())
  estudiante          Estudiante @relation(fields: [estudiante_id], references: [id])
  estudiante_id       Int
  materia             Materia @relation(fields: [materia_id], references: [id])
  materia_id          Int
}

model Facultad {
  id                  Int @id @default(autoincrement())
  nombre              String
  nombre_decano       String
  abreviacion         String
  materias            Materia[]
  estudiantes         Estudiante[]
  profesores          Profesor[]
}

model Profesor {
  id                  Int @id @default(autoincrement())
  nombre              String
  apellido            String
  materias            Materia[]
  facultad            Facultad @relation(fields: [facultad_id], references: [id])
  facultad_id         Int
}